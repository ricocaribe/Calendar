<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlCalendarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <!-- Month and year header -->
    <RelativeLayout
        android:id="@+id/rlCalendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvCalendarMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            tools:text="MARZO"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tvCalendarYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="2021"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </RelativeLayout>

    <com.jmrp.calendar.CalendarViewPager
        android:id="@+id/vpCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlCalendarHeader"/>

    <RelativeLayout
        android:id="@+id/MyCalendarDivider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/vpCalendar"
        android:orientation="horizontal">

        <View
            android:id="@+id/vCalendarDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/imgOpenCloseCalendar"
            android:background="#C6C6C6" />

        <ImageView
            android:id="@+id/imgOpenCloseCalendar"
            android:contentDescription="Expandir o colapsar calendario"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_expand_more"
            android:backgroundTint="@android:color/holo_red_dark"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>
